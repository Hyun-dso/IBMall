<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itbank.mall.mapper.admin.CouponMapper">

    <!-- 쿠폰 등록 -->
    <insert id="insertCoupon" parameterType="com.itbank.mall.dto.admin.coupon.CouponDto">
        INSERT INTO coupon (code, discount_percent, expires_at)
        VALUES (#{code}, #{discountPercent}, #{expiresAt})
    </insert>

    <!-- 쿠폰 전체 조회 -->
    <select id="selectAllCoupons" resultType="com.itbank.mall.entity.coupon.CouponEntity">
        SELECT * FROM coupon ORDER BY created_at DESC
    </select>

</mapper>
