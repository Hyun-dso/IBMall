<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itbank.mall.mapper.product.OptionTypeMapper">

    <select id="findByCategoryId" resultType="com.itbank.mall.entity.product.OptionType" parameterType="int">
        SELECT * FROM option_type
        WHERE category_id = #{categoryId}
    </select>

    <insert id="insert" parameterType="com.itbank.mall.entity.product.OptionType">
        INSERT INTO option_type (name, category_id)
        VALUES (#{name}, #{categoryId})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM option_type
        WHERE id = #{id}
    </delete>

</mapper>
