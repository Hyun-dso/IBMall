<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.itbank.mall.mapper.product.ProductMapper">

    <!-- 원자적 재고 차감 (옵션 없는 상품) -->
    <update id="decreaseStock">
        UPDATE product
        SET stock = stock - #{qty}
        WHERE product_id = #{productId}
          AND stock >= #{qty}
    </update>

    <!-- 상품 기본가 조회 -->
    <select id="getPriceById" parameterType="long" resultType="java.lang.Integer">
        SELECT price
        FROM product
        WHERE product_id = #{productId}
        LIMIT 1
    </select>

</mapper>
